{% if porcentaje < 34 %}
    {% set color = "danger" %}
{% elseif porcentaje < 67 %}
    {% set color = "warning" %}
{% else %}
    {% set color = "success" %}
{% endif %}
<tr>
    <td>
        <a href="#">{{ director.apellido }} {{ director.nombre }}</a>
    </td>
    <td>{{ (director.colegio is null ? ('views.sin_asignar' | trans) : director.colegio.nombre) }}</td>
    <td>
        <div class="progress progress-striped progress-xs">
            <div style="width: {{ porcentaje }}%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="{{ porcentaje }}" role="progressbar" class="progress-bar progress-bar-{{color}}">
                {{ porcentaje }}%
            </div>
        </div>
    </td>
</tr>