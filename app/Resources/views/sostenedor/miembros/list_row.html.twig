<tr class="gradeX">
    <td>{{ miembro.nombre }}</td>
    <td>{{ (miembro.director is null ? ('views.sin_asignar' | trans) : miembro.director.nombre) }}</td>
    <td>{{ (miembro.colegio is null ? ('views.sin_asignar' | trans) : miembro.colegio.nombre) }}</td>
    <td>{{ miembro.email }}</td>
    <td class="center">
        <div class="btn-group">
            <button data-toggle="dropdown" class="btn btn-info dropdown-toggle" type="button">Operaciones <span class="caret"></span></button>
            <ul role="menu" class="dropdown-menu">
                <li><a href="{{ path('ver miembro', {'id': miembro.id, 'role':role }) }}">Ver</a></li>
                    {% if director is defined %}
                    <li><a href="{{ path('nuevo miembro_director', {'type': 'editar','miembro_id': miembro.id, 'id': director.id, 'role':role}) }}">Editar</a></li>
                    {% else %}
                    <li><a href="{{ path('editar miembro', {'id': miembro.id, 'role':role}) }}">Editar</a></li>
                    {% endif %}
                <li><a href="#">Eliminar</a></li>
            </ul>
        </div>
    </td>
</tr>