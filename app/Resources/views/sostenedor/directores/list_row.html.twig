<tr class="gradeX">
    <td>{{ director.username }}</td>
    <td>{{ director.apellido }} {{ director.nombre }}</td>
    <td>{{ (director.sostenedor is null ? ('views.sin_asignar' | trans) : director.sostenedor.nombre) }}</td>
    <td>{{ (director.colegio is null ? ('views.sin_asignar' | trans) : director.colegio.nombre) }}</td>
    <td>{{ director.email }}</td>
    <td class="center">
        <div class="btn-group">
            <button data-toggle="dropdown" class="btn btn-info dropdown-toggle" type="button">Operaciones <span class="caret"></span></button>
            <ul role="menu" class="dropdown-menu">
                <li><a href="{{ path('ver director', {'role' : role, 'id': director.id}) }}">Ver</a></li>
                <li><a href="{{ path('editar director sostenedor', {'id': director.id}) }}">Editar</a></li>
                <li><a href="#directorModal{{director.id}}" data-toggle="modal">Eliminar</a></li>
                <li class="divider"></li>
                <li><a href="{{ path('ver miembros director', {'role': role, 'id': director.id}) }}">Ver Miembros</a></li>
            </ul>
        </div>
    </td>
</tr>
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="directorModal{{director.id}}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                <h4 class="modal-title">{{ 'director.views.delete.title'|trans }}</h4>
            </div>
            <div class="modal-body">

                {{ 'director.views.delete.message'|trans|nl2br }}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'director.views.delete.cancel'|trans }}</button>
                <a href="{{ path('eliminar director sostenedor', {'id': director.id}) }}"><button type="button" class="btn btn-danger"> {{ 'director.views.delete.confirm'|trans }}</button></a>
            </div>
        </div>
    </div>
</div>