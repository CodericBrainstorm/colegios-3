{% extends 'admin/baseadmin.html.twig' %}

{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'Form/fields_view.html.twig'] %}

{% block body %}
    <section class="panel">
        <header class="panel-heading">
            {{ title }}
        </header>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-10">
                    {% if op=="vista" %}
                    {% else %}
                        {{ form_start(form) }} 
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}