{% extends 'base.html.twig' %}

{% form_theme form with 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <section class="panel">
        <header class="panel-heading">
            {{ title | trans}}
        </header>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-10">
                    {{ form_start(form) }} 
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}