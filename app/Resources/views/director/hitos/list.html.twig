{% extends 'base_list.html.twig' %}
{% block list_title %}
    Hitos {% if director is defined %} del Director: <span style="color:#5bc0de;">{{director.nombre~" "~director.apellido}}</span> {% endif %}
{% endblock %}

{% block boton_nuevo %}
    <a href="{{ path('asignar hito', {'role': role}) }}"><button class="btn btn-info" type="button" style="margin:15px;"><i class="fa fa-plus"></i> Asignar Hito</button></a>
{% endblock %}    

{% block list_header %}
    <th>Compromiso</th>
    <th>Director</th>
    <th>Miembros</th>
    <th>Operaciones</th>
    {% endblock %}   

{% block list_body %}
    {% for hito in hitos %} 
        {{ include('director/hitos/list_row.html.twig', { 'hito': hito }) }} 
    {% endfor %} 
{% endblock %}
{% block list_footer %}
    <th>Compromiso</th>
    <th>Director</th>
    <th>Miembros</th>
    <th>Operaciones</th>
    {% endblock %}
