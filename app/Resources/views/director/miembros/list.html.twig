{% extends 'base_list.html.twig' %}
{% block list_title %}
    Usuarios Miembros {% if nombre_director is defined %} del Director: <span style="color:#5bc0de;">{{nombre_director}}</span> {% endif %}
{% endblock %}

{% block boton_nuevo %}
    <a href="{{ path('nuevo miembro', {'role':role}) }}"><button class="btn btn-info" type="button" style="margin:15px;"><i class="fa fa-plus"></i> Nuevo Miembro</button></a>
{% endblock %}    

{% block list_header %}
    <th>Nombre</th>
    <th>Director</th>
    <th>Colegio</th>
    <th>Email</th>
