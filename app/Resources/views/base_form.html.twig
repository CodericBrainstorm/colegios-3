{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'Form/fields.html.twig'] %}

{% block body %}
    <section class="panel">
        <header class="panel-heading">
            {{ title | trans}}
        </header>
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-10">
                    {{ form_start(form) }} 
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-primary">{{ 'boton.guardar'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}