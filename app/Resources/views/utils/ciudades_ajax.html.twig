
<script> var ciudad = $('#app_user_sostenedor_ciudad'); // When sport gets selected ... 
    ciudad.change(function () { // ... retrieve the corresponding form. 
        var $form = $(this).closest('form'); // Simulate form data, but only include the selected sport value. 
        var data = {};
        data[ciudad.attr('name')] = ciudad.val(); // Submit data via AJAX to the form's action path. 
        $.ajax({url: $form.attr('action'), type: $form.attr('method'), data: data, success: function (html) { // Replace current position field ... 
                $('#app_user_sostenedor_comuna').replaceWith(// ... with the returned one from the AJAX response. 
                        $(html).find('#app_user_sostenedor_comuna')); // Position field now displays the appropriate positions. 
            }});
    });
</script>
