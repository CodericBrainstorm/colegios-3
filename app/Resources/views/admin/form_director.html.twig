{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
<section class="panel">
    <header class="panel-heading">
        {% if op == "alta" %}
            Nuevo Director
        {% elseif op == "modificacion" %}
            Editar Director
        {% else %}
            Ver Director
        {% endif %}
    </header>
    <div class="panel-body">
        <form class="form-horizontal adminex-form" method="get">
            <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Sostenedor Responsable</label>
