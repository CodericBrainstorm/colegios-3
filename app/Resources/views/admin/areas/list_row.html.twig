<tr class="gradeX">
    <td>{{ area.nombre }}</td>
    <td>%{{ area.ponderacion * 100}}</td>
    <td>{{ area.descripcion }}</td>
    <td class="center">
        <div class="btn-group">
            <button data-toggle="dropdown" class="btn btn-info dropdown-toggle" type="button">Operaciones <span class="caret"></span></button>
            <ul role="menu" class="dropdown-menu">
                <li><a href="{{ path('ver area', {'id': area.id}) }}">Ver</a></li>
                <li><a href="{{ path('editar area', {'id': area.id}) }}">Editar</a></li>
                <li><a href="#areaModal{{area.id}}" data-toggle="modal">Eliminar</a></li>
            </ul>
        </div>
    </td>
</tr>
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="areaModal{{area.id}}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                <h4 class="modal-title">{{ 'area.views.delete.title'|trans }}</h4>
            </div>
            <div class="modal-body">

                {{ 'area.views.delete.message'|trans|nl2br }}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'area.views.delete.cancel'|trans }}</button>
                <a href="{{ path('borrar area', {'id': area.id}) }}"><button type="button" class="btn btn-danger"> {{ 'area.views.delete.confirm'|trans }}</button></a>
            </div>
        </div>
    </div>
</div>
