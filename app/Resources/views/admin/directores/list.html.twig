{% endblock %}

{% block boton_nuevo %}
    <a href="{% if sostenedor is defined %}{{ path('nuevo director sostenedor admin', {'id':sostenedor.id})}}{% else %} {{ path('nuevo director admin') }}{% endif %}"><button class="btn btn-info" type="button" style="margin:15px;"><i class="fa fa-plus"></i> Nuevo Director</button></a>
{% endblock %}    

{% block list_header %}
    <th>Nombre</th>
    <th>Sostenedor</th>
    <th>Colegio</th>
