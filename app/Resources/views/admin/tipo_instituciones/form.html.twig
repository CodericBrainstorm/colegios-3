{% extends 'admin/baseadmin.html.twig' %}

{% block body %}
    <section class="panel">
        <header class="panel-heading">
            {% if op == "alta" %}
                Nuevo Tipo de Institución
            {% elseif op == "modificacion" %}
                Editar Tipo de Institución
            {% else %}
                Ver Tipo de Institución
            {% endif %}
        </header>
        <div class="panel-body">
{#            <form class="form-horizontal adminex-form" method="get">#}
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        {% if op=="vista" %}
                            <p class="form-control-static">{{ tipo_institucion.nombre }}</p>
                        {% else %}
                            {{ form_start(form) }} 
                            {{ form_widget(form) }} 
                            <div>
                                <input type="submit" value="{{ 'boton.crear'|trans }}" />
                            </div>
                            {{ form_end(form) }}
                            {#                            <input type="text" class="form-control" {% if op=="modificacion" %} value="{{ nombre }}" {% endif %}>#}
                        {% endif %}
                    </div>
                </div>
                {% if op!="vista" %}
                    <button type="submit" class="btn btn-primary">Enviar</button>
                {% endif %}
{#            </form>#}
        </div>
    </section>
{% endblock %}