{% extends 'admin/base_list.html.twig' %}
{% block list_title %}
    Colegios
{% endblock %}

{% block boton_nuevo %}
    <a href="{{ path('nuevo colegio') }}"><button class="btn btn-info" type="button" style="margin:15px;"><i class="fa fa-plus"></i> Nuevo Colegio</button></a>
{% endblock %}    

{% block list_header %}
    <th>Nombre</th>
    <th>Comuna</th>
    <th>Operaciones</th>
    {% endblock %}   

{% block list_body %}
    {% for colegio in colegios %} 
        {{ include('admin/colegios/list_row.html.twig', { 'colegio': colegio }) }} 
    {% endfor %} 
{% endblock %}
{% block list_footer %}
    <th>Nombre</th>
    <th>Comuna</th>
    <th>Operaciones</th>
    {% endblock %}
