<tr class="gradeX">
    <td>{{ ciudad.nombre }}</td>
    <td class="center">
        <div class="btn-group">
            <button data-toggle="dropdown" class="btn btn-info dropdown-toggle" type="button">Operaciones <span class="caret"></span></button>
            <ul role="menu" class="dropdown-menu">
                <li><a href="{{ path('ver ciudad', {'id': ciudad.id}) }}">Ver</a></li>
                <li><a href="{{ path('editar ciudad', {'id': ciudad.id}) }}">Editar</a></li>
                <li><a href="#ciudadModal{{ciudad.id}}" data-toggle="modal">Eliminar</a></li>
            </ul>
        </div>
    </td>
</tr>
<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="ciudadModal{{ciudad.id}}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                <h4 class="modal-title">{{ 'ciudad.views.delete.title'|trans }}</h4>
            </div>
            <div class="modal-body">

                {{ 'ciudad.views.delete.message'|trans|nl2br }}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'ciudad.views.delete.cancel'|trans }}</button>
                <a href="{{ path('eliminar ciudad', {'id': ciudad.id}) }}"><button type="button" class="btn btn-danger"> {{ 'ciudad.views.delete.confirm'|trans }}</button></a>
            </div>
        </div>
    </div>
</div>
